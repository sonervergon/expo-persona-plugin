{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "composite": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "declaration": true, // Enable type declaration generation
    "declarationDir": "./dist", // Set the directory for type declarations
    "outDir": "./dist", // Set the output directory for all compiled files
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
